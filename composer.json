{
    "name": "silverstripe/installer",
    "type": "silverstripe-recipe",
    "description": "The SilverStripe Framework Installer",
    "require": {
        "php": ">=5.6.0",
        "silverstripe/recipe-plugin": "^1.2",
        "silverstripe/recipe-cms": "4.3.0@stable",
        "silverstripe-themes/simple": "~3.2.0",
        "silverstripe/recipe-blog": "^1.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7"
    },
    "autoload": {
        "files": [
            "app/lib/loader.php",
            "app/src/pagetypes/Page.php",
            "app/src/controllers/PageController.php"
        ]
    },
    "extra": {
        "project-files-installed": [
            "app/.htaccess",
            "app/_config.php",
            "app/_config/blog.yml",
            "app/_config/mysite.yml",
            "app/src/Page.php",
            "app/src/PageController.php"
        ],
        "public-files-installed": [
            ".htaccess",
            "index.php",
            "install-frameworkmissing.html",
            "install.php",
            "web.config"
        ],
        "post-update-cmd": [
            "@php -r \"file_exists('_ss_environment.php') || copy('_ss_environment.example.php', '_ss_environment.php');\"",
            "@php -r \"file_exists('app/src/_config.php') || copy('app/src/_config.example.php', 'app/src/_config.php');\""
        ]
    },
    "scripts": {
        "post-update-cmd": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    },
    "config": {
        "process-timeout": 600
    },
    "prefer-stable": true,
    "minimum-stability": "dev"
}
